<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.Views.ImageListPage">
  <ContentPage.Content>
    <StackLayout Margin="0,0,0,20">
      <CarouselView ItemsSource="{Binding Property.ImageUrls}"
                    Position="{Binding Position}">
        <CarouselView.ItemTemplate>
          <DataTemplate>
            <Image Source="{Binding .}"
                   Aspect="AspectFit"/>
          </DataTemplate>
        </CarouselView.ItemTemplate>
      </CarouselView>
      <Label Text="{Binding AccerlerationAxisX, StringFormat='x: {0:N2} G'}"
             FontSize="Micro"
             VerticalOptions="EndAndExpand"
             HorizontalOptions="Center"/>
      <Label Text="{Binding AccerlerationAxisY, StringFormat='y: {0:N2} G'}"
             FontSize="Micro"
             VerticalOptions="EndAndExpand"
             HorizontalOptions="Center"/>
      <Label Text="{Binding AccerlerationAxisZ, StringFormat='z: {0:N2} G'}"
             FontSize="Micro"
             VerticalOptions="EndAndExpand"
             HorizontalOptions="Center"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
  