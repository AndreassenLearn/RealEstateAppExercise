<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:RealEstateApp.Views"
       xmlns:fa="clr-namespace:FontAwesome"
       x:Class="RealEstateApp.AppShell">

  <!--Implicit flyout menu-->
  <ShellContent Title="Properties" ContentTemplate="{DataTemplate views:PropertyListPage}">
    <ShellContent.Icon>
      <FontImageSource FontFamily="FA-solid"
                       Glyph="{x:Static fa:IconFont.Home}"
                       Color="Black"/>
    </ShellContent.Icon>
  </ShellContent>
  <ShellContent Title="Altitude" ContentTemplate="{DataTemplate views:HeightCalculatorPage}">
    <ShellContent.Icon>
      <FontImageSource FontFamily="FA-solid"
                       Glyph="{x:Static fa:IconFont.Mountain}"
                       Color="Black"/>
    </ShellContent.Icon>
  </ShellContent>
  <ShellContent Title="About" ContentTemplate="{DataTemplate views:AboutPage}">
    <ShellContent.Icon>
      <FontImageSource FontFamily="FA-solid"
                       Glyph="{x:Static fa:IconFont.Star}"
                       Color="Black"/>
    </ShellContent.Icon>
  </ShellContent>
</Shell>
  